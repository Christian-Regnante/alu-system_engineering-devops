#!/usr/bin/env bash
# Sets up a web server with nginx, listening on port 80 and returns a custom page

# Exit on error
set -e

# Update package index and install nginx
apt-get update -y
apt-get install -y nginx

# Replace default nginx index page content
echo 'Holberton School for the win!' > /var/www/html/index.html

# Ensure Nginx is started using service command (not systemctl)
service nginx start
