#!/usr/bin/env bash
# Installs and configures nginx to serve a static HTML page with "Holberton School"

# Exit immediately on error
set -e

# Update and install nginx if not already installed
apt-get update -y
apt-get install -y nginx

# Create a simple HTML page with required text
echo 'Holberton School for the win!' | tee /var/www/html/index.html > /dev/null

# Ensure nginx is started using service (NOT systemctl)
service nginx start
